{
    "name": "ts-express-template",
    "version": "1.0.0",
    "description": "Node.js template built with Express.js",
    "main": "app.js",
    "scripts": {
        "start": "node express-dist/app.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon -q express-dist/app.js\" ",
        "build": "npm install && npx tsc",
        "debug:mac": "npx tsc && open -na \"Google Chrome\" \"chrome://inspect/#devices\" && node --inspect express-dist/app.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.9",
        "concurrently": "^7.5.0",
        "nodemon": "^2.0.20",
        "typescript": "^4.8.4"
    }
}
